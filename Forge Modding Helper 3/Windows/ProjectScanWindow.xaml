<Window x:Class="Forge_Modding_Helper_3.Windows.ProjectScanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forge_Modding_Helper_3.Windows" xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d" Height="196" Width="418" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid x:Name="main_grid" Background="{DynamicResource PrimaryBackgroundColor}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <fa:ImageAwesome Grid.Row="0" HorizontalAlignment="Center" Icon="CircleOutlineNotch" Width="60" Height="60" Spin="True" Margin="0, 5, 0, 0" SpinDuration="5" Foreground="{DynamicResource FontColorPrimary}"/>
        <Label x:Name="statut_label" Grid.Row="1" Content="Retrieving project's data..." HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="{DynamicResource FontColorPrimary}" FontSize="14" Margin="0, 0, 0, 20" Tag="project_scan.wait_message"/>
    </Grid>
</Window>
