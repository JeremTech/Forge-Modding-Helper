<Window x:Class="Forge_Modding_Helper_3.Windows.Dialogs.LoadingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Forge_Modding_Helper_3.Windows.Dialogs"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Title="Forge Modding Helper" 
        Height="130" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource PrimaryBackgroundColor}">
    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="StatusTextBlock" Grid.Row="0" VerticalAlignment="Center" Foreground="{DynamicResource FontColorPrimary}" Text="Loading..." />
        <ProgressBar x:Name="StatusProgressBar" Grid.Row="1" IsIndeterminate="True"/>

    </Grid>
</Window>
